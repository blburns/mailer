# Postfix Manager Environment Configuration
# Copy this file to .env and modify as needed

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Database Configuration
# Choose one of the following database types: sqlite, mysql, mariadb, postgresql
DB_TYPE=sqlite

# SQLite Configuration (default - no additional credentials needed)
DB_NAME=postfix_manager.db
DB_DIRECTORY=app/data/db  # Relative to project root, or absolute path

# MySQL/MariaDB Configuration (uncomment and configure if using)
# DB_TYPE=mysql
# DB_HOSTNAME=localhost
# DB_PORT=3306
# DB_USERNAME=postfix_manager
# DB_PASSWORD=postfix_manager
# DB_NAME=postfix_manager
# DB_USE_UNIX_SOCKET=false
# DB_UNIX_SOCKET=/var/run/mysqld/mysqld.sock  # Only if using Unix socket

# PostgreSQL Configuration (uncomment and configure if using)
# DB_TYPE=postgresql
# DB_HOSTNAME=localhost
# DB_PORT=5432
# DB_USERNAME=postfix_manager
# DB_PASSWORD=postfix_manager
# DB_NAME=postfix_manager

# Database Connection Pool Settings (for MySQL/PostgreSQL)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_PRE_PING=true
DB_POOL_RECYCLE=3600
DB_POOL_TIMEOUT=30

# SQLAlchemy Configuration
SQLALCHEMY_TRACK_MODIFICATIONS=false
SQLALCHEMY_ECHO=false

# Mail Server Configuration
POSTFIX_CONFIG_DIR=/etc/postfix
DOVECOT_CONFIG_DIR=/etc/dovecot
LDAP_CONFIG_DIR=/etc/ldap
VMAIL_HOME=/home/vmail

# LDAP Configuration
LDAP_SERVER_URI=ldap://localhost:389
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=your_ldap_password
LDAP_BASE_DN=dc=example,dc=com

# VM Development Settings
VM_HOST=192.168.1.100
VM_USER=ubuntu
VM_APP_DIR=/home/ubuntu/postfix-manager

# Rate Limiting
RATELIMIT_ENABLED=false     # One of true or false
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=200 per day;50 per hour;1 per second
# Disable Flask-Limiter completely (set to false to disable)
FLASK_LIMITER_ENABLED=false

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/postfix-manager.log
